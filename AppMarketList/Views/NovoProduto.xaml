<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMarketList.Views.NovoProduto">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adicionar item" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Adicionar Produto" TextColor="#81b851" FontSize="28" FontAttributes="Bold" Margin="10, 0, 20, 20"/>
            <Label Text="Descrição: "/>
            <Entry x:Name="txt_descricao" Placeholder="Ex: Produto #1"/>

            <Label Text="Quantidade: "/>
            <Entry x:Name="txt_quantidade" Placeholder="Ex: 2"/>

            <Label Text="Valor Unit: "/>
            <Entry x:Name="txt_preco" Placeholder="Ex: 1,90"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>