<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMarketList.Views.EditarProduto">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar item" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="{Binding Descricao}" TextColor="#81b851" FontSize="28" FontAttributes="Bold" Margin="10, 0, 20, 20"/>
            <Label Text="Descrição: "/>
            <Entry x:Name="txt_descricao" Text="{Binding Descricao}"/>

            <Label Text="Quantidade: "/>
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}"/>

            <Label Text="Valor Unit: "/>
            <Entry x:Name="txt_preco" Text="{Binding Preco}"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>